# mongod.conf
sharding:
  clusterRole: {{ cluster_role }}
storage:
  dbPath: /var/lib/mongodb
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log
net:
  port: 27017
  bindIp: 127.0.0.1,{{ hostvars[inventory_hostname]['ansible_host'] }}
security:
  authorization: enabled
  keyFile: /var/mongodb/pki/keyfile
replication:
  replSetName: {{ repl_set_name }}
